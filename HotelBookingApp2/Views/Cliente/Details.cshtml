@model HotelBookingApp2.Models.Cliente

@{
    ViewData["Title"] = "Dettagli Cliente";
}

<h2>Dettagli Cliente</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.Nome</dd>

        <dt class="col-sm-2">Cognome</dt>
        <dd class="col-sm-10">@Model.Cognome</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Telefono</dt>
        <dd class="col-sm-10">@Model.Telefono</dd>

        <dt class="col-sm-2">Creato dall'utente</dt>
        <dd class="col-sm-10">@Model.CreatedBy</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.ClienteId" class="btn btn-warning">Modifica</a>
    <a asp-action="Index" class="btn btn-secondary">Torna alla lista</a>
</div>
