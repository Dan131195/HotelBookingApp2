@model HotelBookingApp2.Models.Cliente

@{
    ViewData["Title"] = "Conferma Eliminazione";
}

<h2>Elimina Cliente</h2>

<h4>Sei sicuro di voler eliminare questo cliente?</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.Nome</dd>

        <dt class="col-sm-2">Cognome</dt>
        <dd class="col-sm-10">@Model.Cognome</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="ClienteId" />
    <button type="submit" class="btn btn-danger">Elimina</button>
    <a asp-action="Index" class="btn btn-secondary">Annulla</a>
</form>
