@model HotelBookingApp2.Models.Prenotazione

<h2>Dettagli Prenotazione</h2>

<dl class="row">
    <dt class="col-sm-3">Cliente</dt>
    <dd class="col-sm-9">@Model.Cliente.Nome @Model.Cliente.Cognome</dd>

    <dt class="col-sm-3">Camera</dt>
    <dd class="col-sm-9">@Model.Camera.Numero</dd>

    <dt class="col-sm-3">Periodo</dt>
    <dd class="col-sm-9">@Model.DataInizio.ToShortDateString() - @Model.DataFine.ToShortDateString()</dd>

    <dt class="col-sm-3">Stato</dt>
    <dd class="col-sm-9">@Model.Stato</dd>
</dl>

<a asp-action="Index" class="btn btn-secondary">Torna alla lista</a>
