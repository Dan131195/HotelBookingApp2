@model HotelBookingApp2.Models.Prenotazione

<h2>Nuova Prenotazione</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="ClienteId"></label>
        <select asp-for="ClienteId" asp-items="ViewBag.Clienti" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="CameraId"></label>
        <select asp-for="CameraId" asp-items="ViewBag.Camere" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="DataInizio"></label>
        <input asp-for="DataInizio" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label asp-for="DataFine"></label>
        <input asp-for="DataFine" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label asp-for="Stato"></label>
        <input asp-for="Stato" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Salva</button>
</form>
