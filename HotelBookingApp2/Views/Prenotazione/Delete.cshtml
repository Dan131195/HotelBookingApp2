@model HotelBookingApp2.Models.Prenotazione

@{
    ViewData["Title"] = "Elimina Prenotazione";
}

<h2>Conferma Eliminazione</h2>

<dl class="row">
    <dt class="col-sm-2">Cliente</dt>
    <dd class="col-sm-10">@Model.Cliente?.Nome</dd>

    <dt class="col-sm-2">Camera</dt>
    <dd class="col-sm-10">@Model.Camera?.Numero</dd>

    <dt class="col-sm-2">Date</dt>
    <dd class="col-sm-10">@Model.DataInizio.ToShortDateString() - @Model.DataFine.ToShortDateString()</dd>

    <dt class="col-sm-2">Stato</dt>
    <dd class="col-sm-10">@Model.Stato</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="PrenotazioneId" />
    <button type="submit" class="btn btn-danger">Elimina</button>
    <a asp-action="Index" class="btn btn-secondary">Annulla</a>
</form>
