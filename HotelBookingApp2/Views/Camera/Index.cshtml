@model IEnumerable<HotelBookingApp2.Models.Camera>

@{
    ViewData["Title"] = "Camere";
}

<h2>@ViewData["Title"]</h2>

<a asp-action="Create" class="btn btn-success mb-3">Aggiungi Camera</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tipo</th>
            <th>Prezzo</th>
            <th>Quantità disponibile</th>
            <th>Azioni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var camera in Model)
        {
            <tr>
                <td>@camera.Tipo</td>
                <td>@camera.Prezzo.ToString("C")</td>
                <td>
                    @if (camera.Numero > 0)
                    {
                        <span class="badge bg-success">@camera.Numero disponibile</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Non disponibile</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@camera.CameraId" class="btn btn-warning btn-sm">Modifica</a>
                    <a asp-action="Delete" asp-route-id="@camera.CameraId" class="btn btn-danger btn-sm">Elimina</a>
                </td>
            </tr>
        }
    </tbody>
</table>
